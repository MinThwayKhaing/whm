<!DOCTYPE f:view PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
                        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<f:view locale="#{LanguageActionBean.locale}"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui">
    <h:head>
        <meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>
        <h:outputStylesheet library="css" name="default.css"/>
        <h:outputScript library="primefaces" name="js/jquery.min.js" target="head" />
        <link rel="shortcut icon" type="image/x-icon" href="#{request.contextPath}/images/whm.ico"/>
        <title>Working Hour Management</title>
    </h:head>
    <h:body>
        <div id="statusIndicator">
            <p:ajaxStatus style="width:16px;height:16px;">
                <f:facet name="start">
                    <h:outputText value="Loading..."/>
                    <h:graphicImage value="/images/loading.gif"/>
                </f:facet>
                <f:facet name="complete">
                    <h:outputText value=""/>
                </f:facet>
            </p:ajaxStatus>
        </div>
        <p:layout fullPage="true">
            <p:layoutUnit id="topPanel" position="north">
                <ui:include src="/common/header.xhtml"/>
            </p:layoutUnit>
            <p:layoutUnit position="center">
                <ui:insert name="content"/>
            </p:layoutUnit>
            <p:layoutUnit position="south">
            	<ui:include src="/common/footer.xhtml"/>
            </p:layoutUnit>
        </p:layout>
    </h:body>
</f:view>
